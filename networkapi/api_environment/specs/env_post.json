          },
          "ambiente_logico": {
            "type": "integer"
          },
          "divisao_dc": {
            "type": "integer"
          },
          "filter": {
            "type": [
              "integer",
              "null"
            ]
          },
          "min_num_vlan_1": {
            "type": [
              "integer",
              "null"
            ]
          },
          "max_num_vlan_1": {
            "type": [
              "integer",
              "null"
            ]
          },
          "min_num_vlan_2": {
            "type": [
              "integer",
              "null"
            ]
          },
          "max_num_vlan_2": {
            "type": [
              "integer",
              "null"
            ]
          },
          "ipv4_template": {
            "type": [

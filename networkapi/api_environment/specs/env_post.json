          "default_vrf": {
            "type": [
              "integer"
            ]
          },
          "configs": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "subnet": {
                  "type": "string"
                },
                "new_prefix": {
                  "type": "string"
                },
                "type": {
                  "type": "string"
                },
                "network_type": {
                  "type": "integer"
                }
              }
            }
          }

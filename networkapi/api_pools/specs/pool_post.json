{
  "title": "Pool Post",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": [
    "server_pools"
  ],
  "definitions": {
    "ipv4": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "ip_formated"
      ],
      "properties": {
        "id": {
          "type": "integer"
        },
        "ip_formated": {
          "type": "string",
          "oneOf": [
            {
              "format": "ipv4"
            }
          ]
        }
      }
    },
    "ipv6": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "ip_formated"
      ],
      "properties": {
        "id": {
          "type": "integer"
        },
        "ip_formated": {
          "type": "string",
          "oneOf": [
            {
              "format": "ipv6"
            }
          ]
        }
      }
    }
  },
  "properties": {
    "server_pools": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "identifier": {
            "type": "string",
            "pattern": "^([a-zA-Z0-9._-]){3,}$",
            "minimum": 3
          },
          "default_port": {
            "type": "integer",
            "minimum": 1,
            "maximum": 65535
          },
          "environment": {
            "type": "integer"
          },
          "servicedownaction": {
            "type": "object",
            "properties": {
              "id": {
                "type": "integer"
              },
              "name": {
                "type": "string"
              }
            },
            "required": [
              "name"
            ]
          },
          "lb_method": {
            "type": "string"
          },
          "healthcheck": {
            "type": "object",
            "properties": {
              "identifier": {
                "type": [
                  "string",
                  "null"
                ]
              },
              "healthcheck_type": {
                "type": "string",
                "enum": [
                  "HTTP",
                  "HTTPS",
                  "UDP",
                  "TCP"
                ]
              },
              "healthcheck_request": {
                "type": "string"
              },
              "healthcheck_expect": {
                "type": "string"
              },
              "destination": {
                "type": "string",
                "pattern": "^(\\*):([0-9]+|\\*)$"
              }
            },
            "required": [
              "identifier",
              "healthcheck_type",
              "healthcheck_request",
              "healthcheck_expect",
              "destination"
            ]
          },
          "default_limit": {
            "type": "integer",
            "minimum": 0
          },
          "groups_permissions": {
            "type": [
              "array",
              "null"
            ],
            "items": {
              "type": "object",
              "properties": {
                "group": {
                   "type": "integer"
                },
                "read": {
                   "type": "boolean"
                },
                "write": {
                   "type": "boolean"
                },
                "delete": {
                   "type": "boolean"
                },
                "change_config": {
                   "type": "boolean"
                }
              },
              "required": [
                "group",
                "read",
                "write",
                "delete",
                "change_config"
              ]
            }
          },
          "users_permissions": {
            "type": [
              "array",
              "null"
            ],
            "items": {
              "type": "object",
              "properties": {
                "user": {
                   "type": "integer"
                },
                "read": {
                   "type": "boolean"
                },
                "write": {
                   "type": "boolean"
                },
                "delete": {
                   "type": "boolean"
                },
                "change_config": {
                   "type": "boolean"
                }
              },
              "required": [
                "user",
                "read",
                "write",
                "delete",
                "change_config"
              ]
            }
          },
          "server_pool_members": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "ipv6": {
                  "oneOf": [
                    {
                      "type": "null"
                    },
                    {
                      "$ref": "#/definitions/ipv6"
                    }
                  ]
                },
                "ip": {
                  "oneOf": [
                    {
                      "type": "null"
                    },
                    {
                      "$ref": "#/definitions/ipv4"
                    }
                  ]
                },
                "priority": {
                  "type": "integer",
                  "minimum": 0,
                  "maximum": 4294967295
                },
                "equipment": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer"
                    },
                    "identifier": {
                      "type": "string"
                    }
                  }
                },
                "weight": {
                  "type": "integer"
                },
                "limit": {
                  "type": "integer",
                  "minimum": 0
                },
                "port_real": {
                  "type": "integer",
                  "minimum": 1,
                  "maximum": 65535
                },
                "member_status": {
                  "type": "integer",
                  "minimum": 0,
                  "maximum": 7
                }
              },
              "required": [
                "ipv6",
                "ip",
                "priority",
                "equipment",
                "weight",
                "limit",
                "port_real",
                "member_status"
              ]
            }
          }
        },
        "required": [
          "identifier",
          "default_port",
          "environment",
          "servicedownaction",
          "lb_method",
          "healthcheck",
          "default_limit",
          "server_pool_members"
        ]
      }
    }
  }
}
